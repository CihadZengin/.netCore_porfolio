@model EntityLayer.Concrete.WriterMessage
@{
    ViewData["Title"] = "AdminMessageDetails";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-description"> Mesaj Detay Paneli </p>
            <form class="forms-sample">
                <div class="form-group">
                    <label for="exampleInputName1">ID</label>
                    @Html.TextBoxFor(x => x.WriterMessageID, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Başlık</label>
                    @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Gönderen</label>
                    @Html.TextBoxFor(x => x.SenderName, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Alıcı</label>
                    @Html.TextBoxFor(x => x.ReciverName, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Tarih</label>
                    @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Mesaj</label>
                    @Html.TextBoxFor(x => x.MessageContent, new { @class = "form-control" })
                </div>
                <a asp-action="ReceiverMessageList" class="btn btn-primary mr-2">Admin Gelen Mesajlar</a>
                <a asp-action="SenderMessageList" class="btn btn-warning mr-2">Admin Giden Mesajlar</a>
            </form>
        </div>
    </div>
</div>

